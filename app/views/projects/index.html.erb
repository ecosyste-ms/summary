<div class="col-lg-4 container-md text-center">
  <form class="row g-2 justify-content-center" action='<%= lookup_projects_path %>' method="post">
    <div class="col-auto">
      <label for="repo_name" class="visually-hidden">Project URL</label>
      <input name='url' type="text" class="form-control" id="url" placeholder="URL: eg https://github.com/ecosyste-ms/packages" size="50">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Summarize</button>
    </div>
  </form>
</div>

<div class="container-md">
  <ul class="nav nav-tabs mb-4">
    <li class="nav-item">
      <%= link_to 'Projects', projects_path, class: 'nav-link active' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Collections', collections_path, class: 'nav-link ' %>
    </li>
  </ul>

  <%= render @projects %>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>  
</div>